<mvc:View controllerName="gbi.controller.Details" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns="sap.m">
    <Page title="Detalles de la Orden">
        <l:Grid defaultSpan="L12 M12 S12" width="auto">
            <l:content>
                <f:SimpleForm id="idCusotmerForm" minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" title="Detallen Orden" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
                    <f:content>

                        <core:Title text="Orden" />
                        <Label text="Orden ID" />
                        <Text text="{gbi>OrdenID}" />
                        <Label text="Empleado" />
                        <Text text="{gbi>EmpleadoID}" />
                        <Label text="Referencia" />
                        <Text text="{gbi>Referencia}" />
                         <Label text="Nombre" />
                        <Text text="{gbi>Nombre}" />
                        <Label text="Color" />
                        <Text text="{gbi>Color}" />
                        <Label text="Cantidad" />
                        <Text text="{gbi>Cantidad}" />
                    </f:content>
                </f:SimpleForm>
                <Image src="{ path : 'gbi>ID', formatter: '.imageURL' }" height="343px" width="920px" />
            </l:content>
        </l:Grid>

        

    </Page>
</mvc:View>
